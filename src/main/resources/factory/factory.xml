<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="homeService" class="com.mjie.xml.beans.classes.HomeServiceFactory" factory-method="homeService"/>

    <bean id="serviceLocator" class="com.mjie.xml.beans.classes.DefaultServiceLocator"/>

    <bean id="clientService" factory-bean="serviceLocator" factory-method="clientService"/>
    <bean id="accountService" factory-bean="serviceLocator" factory-method="accountService"/>

</beans>