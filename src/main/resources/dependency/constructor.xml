<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="thingTwo" class="com.mjie.xml.beans.dependency.constructor.ThingTwo"/>
    <bean id="thingThree" class="com.mjie.xml.beans.dependency.constructor.ThingThree"/>

    <!--基于构造方法的注入-->
    <bean id="thingOne" class="com.mjie.xml.beans.dependency.constructor.ThingOne">
        <constructor-arg ref="thingThree"/>
        <constructor-arg ref="thingTwo"/>
    </bean>

</beans>